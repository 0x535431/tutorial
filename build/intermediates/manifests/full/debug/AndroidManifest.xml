            android:value="AIzaSyCjwOo-XUQjp11KZx1KFrF_jJDdCP-SexM" />
        <meta-data
            android:name="identitytoolkit.server_client_id"
            android:value="58941837826-55kqi4hk3a1of9cqj7l3s3mrg9puajml.apps.googleusercontent.com" />
        <meta-data
            android:name="identitytoolkit.server_widget_url"
            android:value="https://apiv3-1076.appspot.com/widget" />
